<header cellspacing="40">
	<p><%= link_to "Home", root_path %>
	<%= link_to "About", about_path %>
	<%= link_to "Contact", contact_path %></p>	
</header>

<body align="center">

	<h1>HiSchools!</h1>

	<%= form_tag search_path, method: :get do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	<% end %>
	<p>-----------------------------<p>
	<p>Can't find what you're looking for?</p>
	<p><%= link_to "Add a school to our database", new_school_path(@school) %>
	</p>
	<p>-----------------------------<p>
	<% @school.each do |data| %>
		<p><%= data.name %></p>
		<p><%= data.city %>, <%= data.state %></p>
		<p>Type: <%= data.schooltype %></p>
		<p><%= link_to "Show", school_path(data)%>      
		<%= link_to "Edit", edit_school_path(data) %></p>
		<p>-----------------------------<p>
	<% end %>
</body>